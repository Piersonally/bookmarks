<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>Section</th>
    <th>Nth from top of section</th>
    <th>Legend</th>
    <th>Image</th>
  </tr>

<% for bookmark in @bookmarks %>
  <tr>
    <td><%=h bookmark.section_id %></td>
    <td><%=h bookmark.nth_from_top_of_section %></td>
    <td><%=h bookmark.legend %></td>
    <td><%=h bookmark.image %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bookmark', new_bookmark_path %>
