<h1>New section</h1>

<% form_for(@section) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :column_id %><br />
    <%= f.text_field :column_id %>
  </p>
  <p>
    <%= f.label :nth_section_from_top %><br />
    <%= f.text_field :nth_section_from_top %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', sections_path %>
