%h3
  Webpage
  = @webpage.url
%h2
  Column
  = @column.nth_from_left
%h1
  Section
  = "#{@section.nth_section_from_top}:"
  = @section.title
%table
  %tr
    %th Order
    %th Legend
    %th URL
    %th Image
  - @section.bookmarks.each do |bookmark|
    %tr
      %td=h bookmark.nth_from_top_of_section
      %td=h bookmark.legend
      %td=h bookmark.url
      %td=h bookmark.image
      %td= link_to 'Edit', edit_webpage_column_section_bookmark_path(@webpage, @column, @section, bookmark)
      %td= link_to 'Destroy', webpage_column_section_bookmark_path(@webpage, @column, @section, bookmark), :confirm => 'Are you sure?', :method => :delete
  %tr
    %td= link_to 'New Bookmark', new_webpage_column_section_bookmark_path(@webpage, @column, @section)

= link_to 'Edit', edit_webpage_column_section_path(@webpage, @column, @section)
|
= link_to "Back to #{@webpage.url} column #{@column.nth_from_left}", webpage_column_path(@webpage, @column)
