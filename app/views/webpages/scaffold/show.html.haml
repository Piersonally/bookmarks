%h1
  Webpage
  =h @webpage.url
%table#columnsTable
  %tr
    %th#columnsColumnHeading Column
  - @webpage.columns.each do |column|
    %tr{ :class => cycle('evenrow', 'oddrow') }
      %td.columnNthFromLeft= column.nth_from_left
      %td.rowAction= link_to 'Show', webpage_column_path(@webpage, column)
      %td.rowAction= link_to 'Edit', edit_webpage_column_path(@webpage, column)
      %td.rowAction= link_to 'Destroy', webpage_column_path(@webpage, column), :confirm => 'Are you sure?', :method => :delete
  %tr
    %td#newColumn= link_to 'New column', new_webpage_column_path(@webpage)
%br/
= link_to 'Back to all webpages', webpages_path
